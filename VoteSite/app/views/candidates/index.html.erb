
<h1><%= flash[:notice] %></h1>
<h1>候选人列表</h1>

<%= link_to '新增候选人', new_candidate_path %>

<table>
  <thead>
  <tr>
    <td>投票</td>
    <td>候选人姓名</td>
    <td>政党</td>
    <td>政见</td>
    <td>票数</td>
    <td>操作</td>
  </tr>
  </thead>
  <tbody>
  <% @candidates.each do |candidate| %>
      <tr>
        <td><%= link_to 'Vote He/She' %><td>
        <td><%= candidate.name %></td>
        <td><%= candidate.party %></td>
        <td><%= candidate.politics %></td>
        <td><%= candidate.votes %></td>
        <td><%= link_to 'Edit',edit_candidate_path(candidate) %><%= link_to 'Delete' , candidate_path(candidate),method: 'Delete',data:{confirm:"确认删除？"} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
