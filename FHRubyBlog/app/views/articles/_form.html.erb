<% form_for(@articles) do |f| %>
    <% if @articles %>
      <% if @articles.errors.any? %>
        <%= pluralize(@articles.errors.count, "error") %>
            <div id = "error_explanation">
            <h2>
              prohibited
              this article from being saved:
            </h2>
            <ul>
              <% @articles.errors.full_messages.each do |error| %>
              <li><%= error %></li>
              <% end %>
            </ul>
            </div>
        <% end %>
    <% end %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>