<h1>Listening Articles</h1>

<%= link_to 'New articles', new_article_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.text %></td>
    <td><%= link_to 'Show', article_path(article) %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
  </tr>
  <% end %>
</table>

<br><br><br>

<p>
  <ol>
    <% @articles.each do |article| %>
        <li><%= article.title %> </li>
    <% end %>
  </ol>
</p>